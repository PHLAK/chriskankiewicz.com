{
    "name": "phlak/chriskankiewicz.com",
    "type": "project",
    "description": "The homepage of Chris Kankiewicz.",
    "keywords": [
        "Chris Kankiewicz"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "erusev/parsedown-extra": "^0.8",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^11.0",
        "laravel/sanctum": "^4.0",
        "laravel/telescope": "^5.0",
        "laravel/tinker": "^2.9",
        "laravel/ui": "^4.0",
        "spatie/yaml-front-matter": "^2.0",
        "symfony/yaml": "^6.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.1",
        "brianium/paratest": "^7.2",
        "captainhook/captainhook": "^5.10",
        "captainhook/plugin-composer": "^5.3",
        "fakerphp/faker": "^1.23",
        "kirschbaum-development/laravel-openapi-validator": "^1.0",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.1",
        "larastan/larastan": "^2.9",
        "phlak/coding-standards": "^3.0",
        "phpunit/phpunit": "^10.1",
        "spatie/laravel-ignition": "^2.0"
    },
    "suggest": {
        "ext-yaml": "Required for initial database seeding"
    },
    "config": {
        "allow-plugins": {
            "captainhook/plugin-composer": true,
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        },
        "optimize-autoloader": true,
        "platform-check": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan vendor:publish --tag laravel-assets",
            "@php artisan ide-helper:generate || true",
            "@php artisan ide-helper:models --nowrite || true"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
