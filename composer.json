{
    "name": "phlak/chriskankiewicz.com",
    "type": "project",
    "description": "The homepage of Chris Kankiewicz.",
    "keywords": ["Chris Kankiewicz"],
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "erusev/parsedown-extra": "^0.8",
        "fideloper/proxy": "^4.0",
        "fruitcake/laravel-cors": "^2.0",
        "guzzlehttp/guzzle": "^7.0",
        "laravel/framework": "^8.0",
        "laravel/nova": "^3.0",
        "laravel/telescope": "^4.0",
        "laravel/tinker": "^2.0",
        "laravel/ui": "^3.0",
        "nunomaduro/larastan": "^0.7.0",
        "spatie/yaml-front-matter": "^2.0",
        "symfony/yaml": "^5.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.8",
        "beyondcode/laravel-dump-server": "^1.0",
        "facade/ignition": "^2.3",
        "fakerphp/faker": "^1.9.1",
        "filp/whoops": "^2.0",
        "kirschbaum-development/laravel-openapi-validator": "^0.1.3",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^5.0",
        "phlak/coding-standards": "^2.0",
        "phpunit/phpunit": "^9.3"
    },
    "suggest": {
        "ext-yaml": "Required for initial database seeding"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
         "files": ["app/Support/helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan ide-helper:generate || true",
            "@php artisan ide-helper:models --nowrite || true"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ]
}
