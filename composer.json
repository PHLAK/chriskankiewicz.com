{
    "name": "phlak/chriskankiewicz.com",
    "type": "project",
    "description": "The homepage of Chris Kankiewicz.",
    "keywords": [
        "Chris Kankiewicz"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "erusev/parsedown-extra": "^0.8",
        "fruitcake/laravel-cors": "^3.0",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^9.0",
        "laravel/telescope": "^4.0",
        "laravel/tinker": "^2.7",
        "laravel/ui": "^3.0",
        "spatie/yaml-front-matter": "^2.0",
        "symfony/yaml": "^6.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.8",
        "beyondcode/laravel-dump-server": "^1.0",
        "brianium/paratest": "^6.4",
        "captainhook/captainhook": "^5.10",
        "captainhook/plugin-composer": "^5.3",
        "fakerphp/faker": "^1.9.1",
        "filp/whoops": "^2.0",
        "kirschbaum-development/laravel-openapi-validator": "^0.2.0",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^6.1",
        "nunomaduro/larastan": "^2.1",
        "phlak/coding-standards": "^2.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ignition": "^1.0"
    },
    "suggest": {
        "ext-yaml": "Required for initial database seeding"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "captainhook/plugin-composer": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan telescope:publish",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:models --nowrite"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
